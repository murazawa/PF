<%= form_with model: @player, url: player_path, method: :PATCH, local: true do |f| %>


  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :player_name, autofocus: true, autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>

<%= link_to "マイページへ戻る", player_path(current_player) %>